<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".WelcomeActivity"
    tools:showIn="@layout/activity_welcome">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/welcome_text_gur_fateh"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:text="@string/welcome_gur_fateh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/welcome_text_inst_1"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:text="@string/welcome_gur_fateh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text_gur_fateh"
        app:layout_constraintVertical_bias="0.225" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/welcome_text_app_name"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_checkbox_location_permission" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/welcome_text_inst_2"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:text="@string/welcome_gur_fateh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text_inst_1"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/welcome_checkbox_location_permission"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:text="@string/welcome_gur_fateh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text_inst_2"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>